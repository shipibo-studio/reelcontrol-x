{
  "manifest_version": 3,
  "name": "ReelControl X",
  "version": "1.1.0",
  "description": "Professional HTML5 video controls for Instagram reels, posts, and stories. Control playback speed, seek, and pause with ease.",
  "author": "Jorge Puñán",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.instagram.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ReelControl X - Instagram Video Controls"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
